<Window x:Class="WpfAppClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:WpfAppClient.ViewModels"
        Title="Cliente" Height="450" Width="800">
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Grid>
        <DataGrid ItemsSource="{Binding Populations}" AutoGenerateColumns="False" Margin="10"
                  SelectedItem="{Binding SelectedPopulation}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="País" Binding="{Binding Country}" Width="200"/>
                <DataGridTextColumn Header="Cantidad" Binding="{Binding Quantity}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" Margin="10">
            <TextBox Width="50" Text="{Binding Id}" IsReadOnly="True"/>
            <TextBox Width="150" Text="{Binding Country, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBox Width="100" Text="{Binding Quantity, UpdateSourceTrigger=PropertyChanged}"/>
            <Button Content="Agregar" Command="{Binding AddCommand}" Margin="5"/>
            <Button Content="Actualizar" Command="{Binding UpdateCommand}" Margin="5"/>
            <Button Content="Eliminar" Command="{Binding DeleteCommand}" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>